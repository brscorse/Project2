@{
    ViewData["Title"] = "Sign Up Form";
}

@model Group

<h1>@ViewData["Title"]</h1>

<p>Please enter/edit your details for your appointment on @ViewBag.date at @ViewBag.time</p>

<form method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="GroupName">Group Name</label>
        <input asp-for="GroupName" class="form-control" />

        <label asp-for="GroupSize">Group Size</label>
        <input asp-for="GroupSize" class="form-control" />

        <label asp-for="Email">Contact Email</label>
        <input asp-for="Email" class="form-control" />

        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />

        <input type="hidden" asp-for="GroupId" />

        <input type="hidden" asp-for="TimeSlotId" value="@ViewBag.timeid"/>

        <input type="hidden" asp-for="TimeSlot"/>

    </div>

    <div class="float-end">
        <input class="btn btn-primary" type="submit" />
    </div>

</form>
